<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstructorDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/detail_id_instructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instructor ID"
            android:editable="false"/>
        <EditText
            android:id="@+id/detail_name_instructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instructor Name"
            android:clickable="false"/>
        <EditText
            android:id="@+id/detail_email_instructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instructor Email"
            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/detail_phone_instructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instructor Phone Number"
            android:inputType="phone"/>

    </LinearLayout>

</FrameLayout>