<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Class_Detail_DetailsDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <EditText
            android:id="@+id/detail_classdetail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class Detail ID"
            android:editable="false"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Class Subject" />

        <Spinner
            android:id="@+id/detail_classdetail_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Class Participant" />

        <Spinner
            android:id="@+id/detail_classdetail_participant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <Button
            android:id="@+id/update_classdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:layout_weight="1"
            android:text="Update Detail"
            android:layout_gravity="bottom"
            android:backgroundTint="#9AD0EC"/>

        <Button
            android:id="@+id/delete_classdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:layout_weight="1"
            android:text="Delete Detail"
            android:layout_gravity="bottom"
            android:backgroundTint="#FF7878"/>

    </LinearLayout>

</FrameLayout>